{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
      "types": ["node", "jest"],
    "target": "ES2020",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "*.ts",
    "tailwind.config.ts",
    "next-env.d.ts"
  ]
}
